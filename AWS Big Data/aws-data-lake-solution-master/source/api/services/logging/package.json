{
    "name": "data-lake-logging-service",
    "description": "A microservice function for logging data lake activity",
    "main": "index.js",
    "author": {
        "name": "aws-solutions-builder"
    },
    "version": "0.0.1",
    "private": "true",
    "dependencies": {
        "moment": "*",
        "underscore": "*"
    },
    "devDependencies": {
        "grunt": "^0.4.5",
        "grunt-aws-lambda": "^0.13.0",
        "grunt-pack": "0.1.*",
        "grunt-contrib-clean": "*",
        "chai": "*",
        "sinon": "^2.4.1",
        "sinon-chai": "*",
        "mocha": "*",
        "aws-sdk-mock": "*",
        "npm-run-all": "*"
    },
    "scripts": {
        "test": "NODE_PATH=./node_modules mocha lib/*.spec.js",
        "build-init": "rm -rf dist && rm -f archive.zip && mkdir dist && mkdir dist/lib",
        "build:copy": "cp index.js dist/ && cp -r lib/*.js dist/lib",
        "build:install": "cp package.json dist/ && cd dist && npm install --production",
        "build": "npm-run-all -s build-init build:copy build:install",
        "zip": "cd dist && zip -rq data-lake-logging-service.zip ."
    },
    "bundledDependencies": [
        "moment",
        "underscore"
    ]
}
