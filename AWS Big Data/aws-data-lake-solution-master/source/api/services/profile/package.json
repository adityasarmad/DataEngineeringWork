{
    "name": "data-lake-profile-service",
    "description": "A Lambda function for interacting with the data lake user profiles",
    "main": "index.js",
    "author": {
        "name": "aws-solutions-builder"
    },
    "version": "0.0.1",
    "private": "true",
    "dependencies": {
        "moment": "*",
        "shortid": "*",
        "underscore": "*",
        "hat": "*",
        "access-validator": "file:../../../resources/access-validator/"
    },
    "devDependencies": {
        "grunt": "^0.4.5",
        "grunt-aws-lambda": "^0.13.0",
        "grunt-pack": "0.1.*",
        "grunt-contrib-clean": "*",
        "chai": "*",
        "sinon": "^2.4.1",
        "sinon-chai": "*",
        "mocha": "*",
        "aws-sdk-mock": "*",
        "npm-run-all": "*"
    },
    "scripts": {
        "test": "NODE_PATH=./node_modules mocha lib/*.spec.js",
        "build-init": "rm -rf dist && rm -f archive.zip && mkdir dist && mkdir dist/lib",
        "build:copy": "cp index.js dist/ && cp -r lib/*.js dist/lib",
        "build:install": "cp package.json dist/ && cd dist && npm install --production",
        "build": "npm-run-all -s build-init build:copy build:install",
        "zip": "cd dist && zip -rq data-lake-profile-service.zip ."
    },
    "bundledDependencies": [
        "moment",
        "shortid",
        "underscore",
        "hat"
    ]
}
